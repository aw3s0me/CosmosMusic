@model IEnumerable<CosmosMusic.Models.Artists>



<h2>Browsing Artists By Genre: @Request.Params["genre"]</h2>

<link href="~/Content/grid.css" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/isotope.pkgd.min.js")" type="text/javascript"></script>
<script type="text/javascript">$(document).ready(function () {
    $('#isotope_container').isotope({
        itemSelector: '.item',
        masonry: {
            columnWidth: 210
        }
    });

});
</script>


<!-- <div class="music">
    <ul > -->
<div id="isotope_container">
    @if (@Model.Count() == 0)
    {
        <h2>No bands added yet</h2>
    }

@foreach (var artist in Model)
{
    <a class="item" href="@Url.Action("Albums","Music", new { @id = artist.artist_id.ToString()} )">
        <p class="title">@artist.name</p>
        <img src="\Content\Images\ArtistImages\@artist.image" onError="this.onerror=null;this.src='/Content/Images/default_cover.png';" alt="Edit"/>
    </a>  
    
